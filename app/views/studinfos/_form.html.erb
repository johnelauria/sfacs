    <%= f.label :studnum %><br />
    <%= f.text_field :studnum %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, :size => '40' %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= f.text_field :level, :size => '2' %>
  </div>
  
